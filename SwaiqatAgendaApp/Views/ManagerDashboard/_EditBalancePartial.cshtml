@model DataAccessLayer.Models.DailyBalance

<div class="modal-header bg-secondary text-white">
    <h5 class="modal-title">تعديل تقفيل الفرع</h5>
    @* <button type="button" class="btn-close" data-bs-dismiss="modal"></button> *@
</div>

<div class="modal-body">
    <form id="editBalanceForm">
        <input type="hidden" name="BalanceId" value="@Model.BalanceId" />

        @* <div class="mb-3">
            <label>الفرع</label>
            <input class="form-control" value="@Model.Branch?.BranchName" readonly />
        </div> *@
        <div class="mb-3">
            <label>تاريخ التقفيل</label>
            <input name="BalanceDate" class="form-control" value="@Model.BalanceDate?.ToString("yyyy-MM-dd")" readonly/>
        </div>

        <div class="mb-3">
            <label>رصيد البداية</label>
            <input name="OpeningBalance" class="form-control" type="number" step="0.01" value="@Model.OpeningBalance" />
        </div>

        <div class="mb-3">
            <label>الرصيد المرحل</label>
            <input name="ClosingBalance" class="form-control" type="number" step="0.01" value="@Model.ClosingBalance" />
        </div>

        
    </form>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
    <button id="saveBalanceBtn" class="btn btn-primary">حفظ التعديل</button>
</div>
